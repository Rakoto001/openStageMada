<!doctype html>
<html class="{% block bodyClass %}{% endblock %}">

<head>

	<!-- Basic -->
	<meta charset="UTF-8">

	<title>{% block title %}MADASTAGE {% endblock %}</title>
	<meta name="keywords" content="{% block metaKeywords %}{% endblock %}" />
	<meta name="description" content="{% block metaDescription %}{% endblock %}">
	<meta name="author" content="{% block metaAuthor %}{% endblock %}">

	<!-- Mobile Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

	{% block stylesheet %}
	<!-- Web Fonts  -->
	<link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light"
		rel="stylesheet" type="text/css">

        <!-- Vendor CSS -->
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/bootstrap/css/bootstrap.css')}}" />
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/font-awesome/css/font-awesome.css')}}" />
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/magnific-popup/magnific-popup.css')}}" />
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/bootstrap-datepicker/css/datepicker3.css')}}" />
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/select2/select2.css')}}" />

		<!-- Specific Page Vendor CSS -->
		<link rel="stylesheet" href="{{asset('bo/assets/vendor/pnotify/pnotify.custom.css')}}" />

		<!-- Theme CSS -->
		<link rel="stylesheet" href="{{asset('bo/assets/stylesheets/theme.css')}}" />

		<!-- Skin CSS -->
		<link rel="stylesheet" href="{{asset('bo/assets/stylesheets/skins/default.css')}}" />

		<!-- Theme Custom CSS -->
		<link rel="stylesheet" href="{{asset('bo/assets/stylesheets/theme-custom.css')}}">

		<!-- Head Libs -->
		<script src="{{asset('bo/assets/vendor/modernizr/modernizr.js')}}"></script>
        
        <style>
            .color-red{
                color:red;
            }
            .color-green{
                color:green;
            }
            .panel-body-modal, .panel-footer-modal{
                position: relative ;
            }
            .file-clone{
                margin-top: 5px;
                height: 35px;
            }
            .file-clone input{
                width: 95%;
                float: left;
                margin-right: 5px;
            }
            html.fixed .header {
                z-index: 9999;
            }
            .page-header {
                z-index: 9998;
            }
            .document-file-progress-bar {
                background: red;
                display: block;
                height: 20px;
                text-align: center;
                transition: width .3s;
                width: 0;
              }
        </style>
	{% endblock %}

	</head>
	<body>
		<!-- start: page -->
		<section class="body-sign">
			<div class="center-sign">
				<a href="/" class="logo pull-left">
					<img src="assets/images/logo.png" height="54" alt="Porto Admin" />
				</a>

				<div class="panel panel-sign">
					<div class="panel-title-sign mt-xl text-right">
						<h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign In</h2>
					</div>
					<div class="panel-body">
						<form action="{{ path('app_login') }}" method="post">
						 {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
							<div class="form-group mb-lg">
								<label>Username</label>
								<div class="input-group input-group-icon">
									<input name="email" id="inputEmail" type="email" class="form-control input-lg" required />
									<span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-user"></i>
										</span>
									</span>
								</div>
							</div>

							<div class="form-group mb-lg">
								<div class="clearfix">
									<label class="pull-left">Password</label>
									<a href="pages-recover-password.html" class="pull-right">Lost Password?</a>
								</div>
								<div class="input-group input-group-icon">
									<input name="password" id="password" type="password" class="form-control input-lg" required />
									<input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}">
									<span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-lock"></i>
										</span>
									</span>
								</div>
							</div>

							<div class="row">
								<div class="col-sm-8">
									<div class="checkbox-custom checkbox-default">
										<input id="RememberMe" name="rememberme" type="checkbox"/>
										<label for="RememberMe">Remember Me</label>
									</div>
								</div>
								<div class="col-sm-4 text-right">
									<button type="submit" class="btn btn-primary hidden-xs">Sign In</button>
									<button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign In</button>
								</div>
							</div>

							<span class="mt-lg mb-lg line-thru text-center text-uppercase">
								<span>or</span>
							</span>

							<div class="mb-xs text-center">
								<a class="btn btn-facebook mb-md ml-xs mr-xs">Connect with <i class="fa fa-facebook"></i></a>
								<a class="btn btn-twitter mb-md ml-xs mr-xs">Connect with <i class="fa fa-twitter"></i></a>
							</div>

							<p class="text-center">Don't have an account yet? <a href="pages-signup.html">Sign Up!</a>
						</form>
					</div>
									<a href="{{ path('user_default_admin') }}">GENERATE DEFAULT USER</a>

				</div>

				<p class="text-center text-muted mt-md mb-md">&copy; Copyright 2018. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
			</div>
		</section>
			{% block javascript %}
	
        
        
        <script src="{{ asset('bo/assets/vendor/jquery/jquery.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/bootstrap/js/bootstrap.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/nanoscroller/nanoscroller.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/magnific-popup/magnific-popup.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/jquery-placeholder/jquery.placeholder.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/select2/select2.js')}}"></script>
        
        <!-- Specific Page Vendor -->
        <script src="{{ asset('bo/assets/vendor/pnotify/pnotify.custom.js')}}"></script>

        <!-- Theme Base, Components and Settings -->
        <script src="{{ asset('bo/assets/javascripts/theme.js')}}"></script>

        <!-- Theme Custom -->
        <script src="{{ asset('bo/assets/javascripts/theme.custom.js')}}"></script>

        <!-- Theme Initialization Files -->
        <script src="{{ asset('bo/assets/javascripts/theme.init.js')}}"></script>


        <!-- Examples -->
        <script src="{{ asset('bo/assets/javascripts/ui-elements/examples.modals.js')}}"></script>
        
        <script>
            {% for flashMessage in app.session.flashbag.get('success') %}
                new PNotify({
                    title: 'Notification',
                    type: 'success',
                    text: "{{ flashMessage }}",
                    animation: "fade",
                    delay: 6000,
                });
            {% endfor %}
            {% for key, flashMessage in app.session.flashbag.get('error') %}
                new PNotify({
                    title: 'Notification',
                    type: 'error',
                    text: "{{ flashMessage }}",
                    animation: "fade",
                    delay: 6000,
                });
            {% endfor %}
        </script>
	{% endblock %}

        
</body>

</html>