{% extends 'bo/base-bo.html.twig' %}


{% block bodyClass %}fixed
{% endblock %}
{% block title %}
	{{ parent() }}
	- STAGIAIRE : Création
{% endblock %}
{% set menuUser = true %}
{% set menuUserCreat = true %}


{% block stylesheet %}
    {{ parent() }}
{% endblock %}
{% block body %}
<header class="page-header">
        <h2>Stagiaire</h2>

        <div class="right-wrapper pull-right">
                <ol class="breadcrumbs">
                        <li>
                                <a href="{{ path('home_bo')}}">
                                        <i class="fa fa-home"></i>
                                </a>
                        </li>
                       
                        <li><span> {% if isEdit == true %} Edition {% else %} Création {% endif %}</span></li>
                </ol>

                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
	{{ form_start(stagiaireForm,{'method': 'POST', 'type':'submit', 'attr' : {'class' : 'form-horizontal form-bordered', 'id' : 'form-stagiaire' , 'enctype':'multipart/form-data'}}) }}
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="fa fa-caret-down"></a>
					<a href="#" class="fa fa-times"></a>
				</div>


				<h2 class="panel-title">
					{#% if isEdit == true %}
						Edition
					{% else %}
						Nouvelle Annonce
					{% endif %#}
				</h2>
			</header>
			<div class="panel-body">
				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPlaceholder">Votre nom complet</label>
					<div class="col-md-6">
						{{form_widget(stagiaireForm.FullName,{'attr':{
                                                     'class':"form-control",
                                                     'placeholder':"FullName"
                                                 }

                                                 })}}
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword">Sexe</label>
					<div class="col-md-6">
						{{form_widget(stagiaireForm.Sexe,{'attr':{
                                                     'class':"form-control",
                                                     'placeholder':"sexe"
                                                 }

                                                 })}}
					</div>
				</div>

         		<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword">Votre niveau d'étude</label>
					<div class="col-md-6">
						{{form_widget(stagiaireForm.Grade,{'attr':{
                                                     'class':"form-control",
                                                     'placeholder':"niveau"
                                                 }

                                                 })}}
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword">Expérience professionelle</label>
					<div class="col-md-6">
						{{form_widget(stagiaireForm.Experience,{'attr':{
                                                     'class':"form-control",
                                                     'placeholder':"Votre expérience"
                                                 }

                                                 })}}
					</div>
				</div>
			

				
				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword">Votre contact</label>
					<div class="col-md-6">
						{{form_widget(stagiaireForm.Contact,{'attr':{
                                                     'class':"form-control",
                                                     'placeholder':"contact"
                                                 }

                                                 })}}
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword">Votre avatar</label>
					<div class="col-md-6">
						<div class="wrapper-image dropzone-zone-file" id="images">
								{#% if isEdit == true and coverAnnonceImage != '' %}
									<div class="col-md-6">
										<img src="/uploads/cover/{{coverAnnonceImage}}" alt="coverAnnonce" width="150">
									</div>
								{% endif %#}
								<input id="dropzone-file" type="file" name="stagiaireAvatar" accept="image/*" class="dropzone-file {#d-none#}" style="display: block"/>
						</div>
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label" for="inputPassword"></label>
					<div class="col-md-6">
						<button type="submit">Enregistrer</button>
					</div>
				</div>

			</div>
		</section>


	</div>
	{{ form_rest(stagiaireForm) }}
	{{ form_end(stagiaireForm) }}

{% endblock %}

{% block javascript %}
    {{ parent() }}
	
    <script src="{{asset('bo/assets/vendor/select2/select2.js')}}"></script>
    <script src="{{asset('bo/assets/vendor/jquery-datatables/media/js/jquery.dataTables.js')}}"></script>
    <script src="{{asset('bo/assets/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js')}}"></script>
    <script src="{{asset('bo/assets/vendor/jquery-datatables-bs3/assets/js/datatables.js')}}"></script>
{% endblock %}
