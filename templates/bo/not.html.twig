<!doctype html>
<html class="{% block bodyClass %}{% endblock %}">

<head>

	<!-- Basic -->
	<meta charset="UTF-8">

	<title>{% block title %}MADASTAGE - ADMIN{% endblock %}</title>
	<meta name="keywords" content="{% block metaKeywords %}{% endblock %}" />
	<meta name="description" content="{% block metaDescription %}{% endblock %}">
	<meta name="author" content="{% block metaAuthor %}{% endblock %}">

	<!-- Mobile Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

	
	{% block stylesheet %}
    <link rel="stylesheet" href="{{asset('bo/assets/vendor/dropzone/css/basic.css')}}" />
    <link rel="stylesheet" href="{{asset('bo/css/dropzone-file.css')}}" />
	<!-- Web Fonts  -->
	<link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light"
		rel="stylesheet" type="text/css">

        <!-- Vendor CSS -->
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/bootstrap/css/bootstrap.css')}}" />
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/font-awesome/css/font-awesome.css')}}" />
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/magnific-popup/magnific-popup.css')}}" />
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/bootstrap-datepicker/css/datepicker3.css')}}" />
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/select2/select2.css')}}" />

        <!-- Specific Page Vendor CSS -->
        <link rel="stylesheet" href="{{asset('bo/assets/vendor/pnotify/pnotify.custom.css')}}" />

        <!-- Theme CSS -->
        <link rel="stylesheet" href="{{asset('bo/assets/stylesheets/theme.css')}}" />

        <!-- Skin CSS -->
        <link rel="stylesheet" href="{{asset('bo/assets/stylesheets/skins/default.css')}}" />

        <!-- Theme Custom CSS -->
        <link rel="stylesheet" href="{{asset('bo/assets/stylesheets/theme-custom.css')}}">
        
        <link href="{{ asset('bo/assets/plugins/sweetalert/sweetalert.css') }}" rel="stylesheet" type="text/css"/>
        
        
        <!-- Head Libs -->
        <script src="{{asset('bo/assets/vendor/modernizr/modernizr.js')}}"></script>
        
        <link href="{{ asset('bo/css/add.css') }}" rel="stylesheet" type="text/css"/>
	{% endblock %}


</head>

<body>
	<section class="body">

		{% include "common/header.html.twig" %}

		<div class="inner-wrapper">

			<!-- end: sidebar -->

			<section role="main" class="content-body">
				

				{% block body %}
 <div class="form-group">
    
        <label class="col-md-3 control-label" for="inputDefault">Document</label>
        <div class="dropzone dropzone-bloc col-md-6">
            
            <div class="wrapper-image dropzone-zone-file" id="images" 
                onDrop="javascript:handleDrop(event)" onDragOver="javascript:handleDragOver(event)"
                onDragEnter="javascript:handleDragEnter(event)"
                onDragLeave="javascript:handleDragLeave(event)"
                 >
                <input
                    id="dropzone-file"
                    type="file"
                    name="avatar"
                    accept="image/*"
                    class="dropzone-file {#d-none#}"
                    style="display: block"
                    onChange="javascript:selectFiles(event.target.files)"
                
                />
                <span id="dropzone-zone-file-description">Deposer et glisser pour uploader ou cliquer</span>
            </div>
        </div>
    </div>

    	<div class="row">
							<div class="col-xs-12">
								<section class="panel">
									<header class="panel-heading">
										<div class="panel-actions">
											<a href="#" class="fa fa-caret-down"></a>
											<a href="#" class="fa fa-times"></a>
										</div>
						
										<h2 class="panel-title">File Upload Drag'n Drop</h2>
									</header>
									<div class="panel-body">
										<form action="/upload" class="dropzone dz-square" id="dropzone-example"></form>
									</div>
								</section>
							</div>
						</div>
				{% endblock %}

				<!-- end: page -->
			</section>
		</div>

		<aside id="sidebar-right" class="sidebar-right">
		</aside>
	</section>
        {% include "common/modals.html.twig" %}

                
        
	{% block javascript %}
	
        
        
        <script src="{{ asset('bo/assets/vendor/jquery/jquery.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/bootstrap/js/bootstrap.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/nanoscroller/nanoscroller.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/magnific-popup/magnific-popup.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/jquery-placeholder/jquery.placeholder.js')}}"></script>
        <script src="{{ asset('bo/assets/vendor/select2/select2.js')}}"></script>
        
        <!-- Specific Page Vendor -->
        <script src="{{ asset('bo/assets/vendor/pnotify/pnotify.custom.js')}}"></script>

        <!-- Theme Base, Components and Settings -->
        <script src="{{ asset('bo/assets/javascripts/theme.js')}}"></script>

        <!-- Theme Custom -->
        <script src="{{ asset('bo/assets/javascripts/theme.custom.js')}}"></script>

        <!-- Theme Initialization Files -->
        <script src="{{ asset('bo/assets/javascripts/theme.init.js')}}"></script>


        <!-- Examples -->
        <script src="{{ asset('bo/assets/javascripts/ui-elements/examples.modals.js')}}"></script>
        

          <script src="{{asset('bo/js/dropzone-file.js')}}"></script>
    <script>
        var id = 0;
        var action = "edit";
        var inputRef = document.getElementById("dropzone-file");
    </script>




        <script>
            {% for flashMessage in app.session.flashbag.get('success') %}
                new PNotify({
                    title: 'Notification',
                    type: 'success',
                    text: "{{ flashMessage }}",
                    animation: "fade",
                    delay: 6000,
                });
            {% endfor %}
            {% for key, flashMessage in app.session.flashbag.get('error') %}
                new PNotify({
                    title: 'Notification',
                    type: 'error',
                    text: "{{ flashMessage }}",
                    animation: "fade",
                    delay: 6000,
                });
            {% endfor %}
        </script>

	{% endblock %}

        
</body>

</html>